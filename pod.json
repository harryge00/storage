{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
        "name": "glusterfs-test"
    },
    "spec": {
        "containers": [
            {
                "name": "glusterfs",
                "image": "cargo.caicloudprivatetest.com/caicloud/debian:rsync",
                "volumeMounts": [
                    {
                        "mountPath": "/mnt/glusterfs",
                        "name": "replicavol"
                    }
                ],
                "args": [
                  "tail", "-f", "/dev/null"
                ]
            }
        ],
        "volumes": [
            {
                "name": "replicavol",
                "glusterfs": {
                    "endpoints": "glusterfs-cluster",
                    "path": "replica1"
                }
            }
        ]
    }
}